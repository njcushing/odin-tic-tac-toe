{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "operator-linebreak": ["error", "after"],
        "wrap-iife": ["error", "inside"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
